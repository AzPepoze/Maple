{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"outDir": "../../dist/backend",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
